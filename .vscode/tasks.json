    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "msbuild Shushao.sln /p:Configuration=Debug -maxCpuCount -verbosity:minimal -graphBuild:True -nodeReuse:True -nologo",
            // "command": "mingw32-make -j 7",
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "Build Release",
            "type": "shell",
            "group": "build",
            "command": "msbuild Shushao.sln /p:Configuration=Release -maxCpuCount -verbosity:minimal -graphBuild:True -nodeReuse:True -nologo",
            "problemMatcher": [],
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "Rebuild",
            "type": "shell",
            "group": "build",
            "command": "msbuild Shushao.sln /t:Clean;Rebuild -maxCpuCount -verbosity:minimal -graphBuild:True -nodeReuse:True -nologo",
            //"command": "mingw32-make clean && mingw32-make",
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "Build & Run",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "msbuild Shushao.sln /p:Configuration=Debug -maxCpuCount -verbosity:minimal -graphBuild:True -nodeReuse:True -nologo && cd ${workspaceRoot}\\bin\\Debug\\Sandbox && Sandbox.exe",
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "group": "test",
            "command": "cd ${workspaceRoot}\\bin\\Debug\\Sandbox && Sandbox.exe",
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "msbuild Shushao.sln /t:Clean -maxCpuCount -verbosity:minimal -graphBuild:True -nodeReuse:True -nologo",
            "problemMatcher": [],
            "presentation": {
                "clear": true
            }
        },
